<%= render "devise/shared/error_messages", resource: resource %>

<div class="buffer-both">
  <h2><%= t("users.show.editing") %></h2>
</div>

<%= form_for(resource, as: resource_name, data: { turbo: false }, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <form>
    <div class="form-group buffer-both">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group buffer-both">
      <%= f.label t("password.password") %> <i>(<%= t("users.show.leave_blank") %>)</i><br />
      <%= f.password_field :password, autocomplete: t("users.show.new_pass"), class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> <%= t("users.show.char_min") %></em>
      <% end %>
    </div>

    <div class="form-group buffer-both">
      <%= f.label t("users.show.new_pass") %><br />
      <%= f.password_field :password_confirmation, autocomplete: t("users.show.new_pass"), class: "form-control" %>
    </div>

    <div class="form-group buffer-both">
      <%= f.label t("users.show.current_password") %> <br />
      <%= f.password_field :current_password, autocomplete: t("users.show.current_password") , class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t("users.show.update"), class: "btn btn-success" %>
    </div>
  </form>
<% end %>


<div class="buffer-both">
  <h3> <%= t("users.show.cancel_acc") %> </h3>
</div>

<p> <%= t("users.show.unhappy") %> <%= button_to t("users.show.cancel_acc"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to t('users.show.back'), :back %>
