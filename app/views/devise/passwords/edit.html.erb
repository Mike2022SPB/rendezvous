<%= render "devise/shared/error_messages", resource: resource %>

<div class="buffer-both">
  <h2> <%= t("users.show.change_pass")%> </h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <form>
    <div class="form-group buffer-both">
      <%= f.label t("password.password"), t("users.show.new_pass") %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t("password.min") %>)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group buffer-both">
      <%= f.label t("users.show.confirm_pass"), t("users.show.confirm_pass") %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t("users.show.change_my_pass"), class: "btn btn-success" %>
    </div>
  </form>

<% end %>

<%= render "devise/shared/links" %>
