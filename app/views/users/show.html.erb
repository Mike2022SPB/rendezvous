<%= render @user %>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3><%= t('users.show.organised_by') %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t('users.show.zero_events') %></p>
    <% end %>
  </div>
</div>
