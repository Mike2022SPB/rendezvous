<%= form_for(@user) do |f| %>

  <form>
    <div class="form-group buffer-both">
      <%= f.label t("users.show.name") %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group buffer-both">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit t('users.show.save'), class: "btn btn-success" %>
      or <%= link_to t('users.show.back'), :back %>
    </div>
  </form>

<% end %>
