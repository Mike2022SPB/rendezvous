<%= form_for [@event, photo], html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: photo} %>

  <div class="form-group buffer-top">
    <h4> <%= f.label :photo %> </h4>
  </div>

  <div class="form-group buffer-top">
    <%= f.file_field :photo %>
  </div>

  <div class="actions buffer-top">
    <%= f.submit t('controllers.photos.download'), class: 'btn btn-primary' %>
  </div>
<% end %>
